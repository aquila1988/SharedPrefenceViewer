<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_size_10"
    android:paddingRight="@dimen/dimen_size_10"
    android:background="@drawable/selector_item_bg"
    >
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/adapter_sp_type_TextView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:gravity="center"
            android:text="int"
            android:textColor="#ba1e55"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/adapter_sp_key_TextView"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_size_5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_0ebf0e"
            android:minHeight="40dp"
            android:text="demodemodemodemo"
            />

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/divide_line_color"
        />

    <TextView
        android:id="@+id/adapter_sp_value_TextView"
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_size_5"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textColor="@color/color_2222df"
        android:minHeight="40dp"
        android:text="this is value"
        android:maxLines="5"
        android:ellipsize="end"

        />



</LinearLayout>